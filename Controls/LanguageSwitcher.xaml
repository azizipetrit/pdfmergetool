<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDFMergeTool.Controls.LanguageSwitcher">
    <HorizontalStackLayout Spacing="8" HorizontalOptions="End" Padding="5">
        <Picker x:Name="LanguagePicker"
                Title="Select Language"
                SelectedIndexChanged="LanguagePicker_SelectedIndexChanged"
                BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#3A3A3A}"
                TextColor="{AppThemeBinding Light=#333333, Dark=#E0E0E0}"
                HorizontalOptions="Fill"
                WidthRequest="150"
                VerticalOptions="Center" />
    </HorizontalStackLayout>
</ContentView>